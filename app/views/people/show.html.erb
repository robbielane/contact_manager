<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card blue-grey darken-2 hoverable">
      <div class="card-content white-text">

        <h4 class="center"><%= @person.first_name %> <%= @person.last_name %></h4>
        <div class="row">
          <div class="col s6 border-right">

            <h5 class="center">Phone Numbers</h5>
            <ul class="center">
              <% @person.phone_numbers.each do |phone| %>
              <li> <%= phone.number %> <small> <%= link_to 'edit', edit_phone_number_path(phone), class: 'yellow-text' %> | <%= link_to 'delete', phone_number_path(phone, contact_id: @person.id, contact_type: 'Person'), method: :delete, class: 'red-text text-lighten-1' %></small></li>
              <% end %>
            </ul>

          </div>
          <div class="col s6">

            <h5 class="center">Email Addresses</h5>
            <ul class="center">
              <% @person.email_addresses.each do |email| %>
              <li> <%= email.address %> <small> <%= link_to 'edit', edit_email_address_path(email), class: 'yellow-text' %> | <%= link_to 'delete', email_address_path(email, contact_id: @person.id, contact_type: 'Person'), method: :delete, class: 'red-text text-lighten-1' %> </small></li>
              <% end %>
            </ul>

          </div>
        </div>
        <div class="card-action center">
          <%= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person') %>
          <%= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person') %>
          <%= link_to 'Edit', edit_person_path(@person) %>
          <%= link_to 'Back', people_path %>
        </div>

      </div>
    </div>
  </div>
</div>
